<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Répertoires logs -->
    <property name="LOG_PATH" value="logs" />
    <property name="EMAIL_LOG_FILE" value="${LOG_PATH}/debug-email.log" />

    <!-- Appender spécifique pour emails -->
    <appender name="EMAIL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${EMAIL_LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/debug-email-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger uniquement pour EmailService -->
    <logger name="org.example.smartspring.service.EmailService" level="DEBUG" additivity="false">
        <appender-ref ref="EMAIL_FILE"/>
    </logger>

    <!-- Logger JavaMail (pour debug smtp) -->
    <logger name="javax.mail" level="DEBUG" additivity="false">
        <appender-ref ref="EMAIL_FILE"/>
    </logger>

    <!-- Root logger (console normale pour le reste) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
